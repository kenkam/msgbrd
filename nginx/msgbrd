upstream msgbrd {
  server 127.0.0.1:8081;
}

server {
  server_name msgbrd.kkam.in;
  rewrite ^ https://msgbrd.kkam.in$request_uri permanent ;
}

server {
  listen 443;
  ssl on;
  ssl_certificate /etc/ssl/certs/msgbrd.crt;
  ssl_certificate_key /etc/ssl/private/msgbrd.key;

  server_name msgbrd.kkam.in;
  root /usr/share/nginx/www;
  
  location / {
    include uwsgi_params;
    uwsgi_pass msgbrd;
    uwsgi_param UWSGI_PYHOME /home/kenneth/msgbrd/env;
  }
}

